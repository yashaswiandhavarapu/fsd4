import React, { useState } from "react";

function FormData() {
  const [name, setName] = useState("");

  return (
    <div>
      <input
        type="text"
        placeholder="Enter name"
        onChange={(e) => setName(e.target.value)}
      />
      <p>Hello, {name}</p>
    </div>
  );
}
export default FormData;







Use in App.js:

import FormData from "./FormData";
function App() { return <FormData />; }
export default App;
